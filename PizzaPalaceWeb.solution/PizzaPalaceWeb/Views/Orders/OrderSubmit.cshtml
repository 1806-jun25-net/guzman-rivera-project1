@model PizzaPalaceWeb.Models.PizzaM
@{
    ViewData["Title"] = "PlaceAnOrder";
}
<form asp-action="OrderSubmit" method="post">
<div class="form-group">
    @Html.DropDownListFor(x => x.SP, new List<SelectListItem>
    {
          new SelectListItem() {Text = "Cheese Pizza", Value="Cheese"},
          new SelectListItem() {Text = "Pepperoni Pizza", Value="Pepperoni"},
          new SelectListItem() {Text = "All Meat Pizza", Value="Allmeat"},
          new SelectListItem() {Text = "Chorizo", Value="Chorizo"},
          new SelectListItem() {Text = "Bacon", Value="Bacon"},


    }, "Select A Pizza")
</div>
<div class="form-group">
    @Html.DropDownListFor(x => x.SS, new List<SelectListItem>
    {
          new SelectListItem() {Text = "Small   $6.00", Value = "1"},
          new SelectListItem() {Text = "Medium  $12.00", Value = "2"},
          new SelectListItem() {Text = "Large   $17.00", Value = "3"},

    }, "Select A Size")
</div>
<div class="form-group">
    <input type="submit" value="Create Pizza" class="btn btn-default" />
</div>
</form>

<form asp-action="Details">
    <div class="form-group">
        <input type="submit" value="Submit Order" class="btn btn-default" />
    </div>
</form>