@model PizzaOrders
@using PizzaPalace.Data;

@{
    ViewData["Title"] = "Index";
}

<h2>Relations</h2>

<h2>@ViewBag.Message</h2>


<p><b>Users List</b></p>

<table class="table" style="border: dashed">
    <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last Name</th>
    </tr>
    @foreach (Users user in Model.UT)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
        </tr>
    }
</table>

<p><b>Orders List</b></p>
<table class="table" style="border: dashed">
    <tr>
        <th>Location FK</th>
        <th>OrderID</th>
        <th>User FK</th>
    </tr>
    @foreach (Orders order in Model.OT)
    {
        <tr>
            <td>@order.LocationsIdfk</td>
            <td>@order.OrderId</td>
            <td>@order.UserIdfk</td>
        </tr>
    }
</table>

<p><b>Pizza List</b></p>

<table class="table" style="border: dashed">
    <tr>
        <th>Size</th>
        <th>Pizza</th>
        <th>Cost</th>
        <th>OrderID FK</th>
    </tr>
    @foreach (Pizza pizza in Model.PT)
    {
    <tr>
        <td>@pizza.Size</td>
        <td>@pizza.Pizza1</td>
        <td>@pizza.Cost</td>
        <td>@pizza.OrdersIdfk</td>
    </tr>
    }
</table>  